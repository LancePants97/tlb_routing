<h1>Enter Delivery Locations</h1>

<%= form_with url: deliveries_path, method: :post, data: { turbo: false }, local: true do |form| %>
  <div class="field">
    <%= form.label :locations, "Enter Locations In Double Quotes Each Separated by a Space" %>
    <%= form.text_area :locations, rows: 4, cols: 40, placeholder: "e.g. '4057 Asbury Ave, Tinton Falls, NJ' '610 Sixth Ave, Asbury Park, NJ' '23 Bay Ave, Highlands, NJ'", value: params[:locations] || '' %>
  </div>

  <div class="actions">
    <%= form.submit "Submit" %>
  </div>
<% end %>

<% if @stops.any? %>
  <h2>Ordered List</h2>
  <ul>
    <% @stops.each do |stop| %>
      <li><%= stop %></li>
    <% end %>
  </ul>
<% elsif flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>
